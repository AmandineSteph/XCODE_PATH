<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bacground_recherche_3"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="17dp"
            android:src="@drawable/ic_baseline_view_headline_24" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:fontFamily="cursive"
            android:text="Romi Shop"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="italic" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="17dp"
            android:src="@drawable/ic_round_search_24"
            app:tint="@color/white" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="17dp"
                android:src="@drawable/ic_outline_shopping_cart_24"
                tools:ignore="MissingConstraints" />


        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="17dp"
            android:src="@drawable/ic_outline_account_circle_24"
            app:tint="@color/white" />
    </LinearLayout>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="15dp"
        android:layout_margin="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/fab_margin">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Enfants"
                        android:textSize="20sp"
                        android:textColor="#2C1175"
                        android:padding="@dimen/fab_margin"
                        android:layout_marginStart="14dp"
                        tools:ignore="HardcodedText"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Femmes"
                        android:textSize="20sp"
                        android:textColor="#2C1175"
                        android:padding="@dimen/fab_margin"
                        tools:ignore="HardcodedText"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hommes"
                        android:textSize="20sp"
                        android:textColor="#2C1175"
                        android:padding="@dimen/fab_margin"
                        tools:ignore="HardcodedText"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <ImageButton
                    android:layout_width="75dp"
                    android:layout_height="5dp"
                    android:layout_marginStart="26dp"
                    android:background="@drawable/bacground_recherche"
                    android:src="@drawable/bacground_recherche"
                    android:tint="#E91E63"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/fab_margin">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="189dp"
                    android:layout_margin="@dimen/fab_margin"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="141dp"
                        android:src="@drawable/shop1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Barboteuse Girly" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11500 FCFA"
                        android:textStyle="italic"
                        android:textSize="11dp"/>

                </LinearLayout>
                <ImageButton
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/bacground_recherche"
                    android:src="@drawable/bacground_recherche"
                    android:tint="#BCBCBC"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/fab_margin"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="141dp"
                        android:src="@drawable/shop2" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Barboteuse Mixte"
                        android:textStyle="italic"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7500 FCFA"
                        android:textStyle="italic"
                        android:textSize="11dp"/>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/fab_margin">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="189dp"
                    android:layout_margin="@dimen/fab_margin"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="141dp"
                        android:src="@drawable/shop3" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Barboteuse Fleurie" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6700 FCFA"
                        android:textStyle="italic"
                        android:textSize="11dp"/>
                </LinearLayout>
                <ImageButton
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/bacground_recherche"
                    android:src="@drawable/bacground_recherche"
                    android:tint="#BCBCBC"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/fab_margin"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="141dp"
                        android:src="@drawable/shop4" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pyjama fille"
                        android:textStyle="italic"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12500 FCFA"
                        android:textStyle="italic"
                        android:textSize="11dp"/>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/fab_margin">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="189dp"
                    android:layout_margin="@dimen/fab_margin"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="141dp"
                        android:src="@drawable/shop3" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Barboteuse Fleurie" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6700 FCFA"
                        android:textStyle="italic"
                        android:textSize="11dp"/>
                </LinearLayout>
                <ImageButton
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/bacground_recherche"
                    android:src="@drawable/bacground_recherche"
                    android:tint="#BCBCBC"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="69dp"
                    android:layout_margin="@dimen/fab_margin"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="141dp"
                        android:src="@drawable/shop4" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pyjama fille"
                        android:textStyle="italic" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12500 FCFA"
                        android:textSize="11dp"
                        android:textStyle="italic" />


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>




