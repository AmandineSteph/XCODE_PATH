<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:backgroundTint="#C8C8C8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:text="@string/_09_41"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:padding="@dimen/semi_fab_margin"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:padding="5dp"
            app:tint="?android:attr/colorForeground"
            android:src="@drawable/ic_baseline_signal_cellular_alt_24"
            tools:ignore="ContentDescription" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_wifi_24"
            android:layout_gravity="end"
            app:tint="?android:attr/colorForeground"
            android:padding="7dp"
            tools:ignore="ContentDescription" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_round_battery_full_24"
            android:layout_gravity="end"
            app:tint="?android:attr/colorForeground"
            android:padding="4dp"
            tools:ignore="ContentDescription" />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="58dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:padding="6dp"
            android:src="@drawable/ic_round_arrow_back_24"
            app:tint="?android:attr/colorForeground"
            tools:ignore="ContentDescription" />

        <ImageView
            android:layout_width="237dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:padding="@dimen/semi_fab_margin"
            app:tint="?android:attr/colorForeground"
            tools:ignore="ContentDescription" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="8dp"
            android:src="@drawable/ic_round_turned_in_24"
            app:tint="#4B0957"
            tools:ignore="ContentDescription" />
    </LinearLayout>
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/sunshine_grand_villa_resort_amp_spa"
    android:textSize="36sp"
    android:textStyle="bold"
    android:layout_margin="15dp">

</TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_gravity="center_vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_round_star_24"
            app:tint="#FFC107"
            tools:ignore="ContentDescription" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="@dimen/semi_fab_margin"
            android:text="4,9"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            tools:ignore="HardcodedText" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="@dimen/semi_fab_margin"
            android:text="@string/_120_reviews"
            android:textColor="#5E5E5E"/>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="30dp"
                android:layout_margin="@dimen/semi_fab_margin">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/th"
                    tools:ignore="ContentDescription" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/semi_fab_margin"
                app:cardCornerRadius="30dp">

                <ImageView
                    android:layout_width="263dp"
                    android:layout_height="182dp"
                    android:src="@drawable/R00d1f4e21eb2c64af20e788531e57be5"
                    tools:ignore="ContentDescription" />
            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_gravity="center_vertical"
        tools:ignore="ExtraText">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_round_location_on_24"
            app:tint="#FFC107"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="192dp"
            android:layout_height="34dp"
            android:layout_gravity="end"
            android:layout_marginStart="@dimen/semi_fab_margin"
            android:text="@string/kecamatan_kula_utara_bali_indonesia"
            android:textColor="#5E5E5E" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="27dp"
            android:layout_weight="1"
            android:padding="@dimen/semi_fab_margin"
            app:tint="?android:attr/colorForeground"
            tools:ignore="ContentDescription"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/icone_messenger"
                android:layout_width="28dp"
                android:layout_height="29dp"
                android:background="@drawable/gray_background"
                android:padding="1dp"
                android:src="@drawable/map"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="ContentDescription,MissingConstraints" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_marginStart="@dimen/semi_fab_margin"
        android:text="Features"
        android:textStyle="bold"
        android:textSize="20sp"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:layout_width="454dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp">
                <ImageButton
                    android:layout_width="155dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:src="@drawable/bacground_recherche"
                    android:tint="#673AB7"
                    tools:ignore="ContentDescription,MissingConstraints"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/semi_fab_margin"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="0dp"
                    tools:ignore="MissingConstraints,UseCompoundDrawables">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_king_bed_24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7 Bedrooms"
                        android:textColor="@color/white" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp">
            <ImageButton
                android:layout_width="155dp"
                android:layout_height="35dp"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:background="#00000000"
                android:src="@drawable/bacground_recherche"
                android:tint="#2196F3"
                tools:ignore="ContentDescription,MissingConstraints"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/semi_fab_margin"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="0dp"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_pool_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Open pool"
                    android:textColor="@color/white" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_width="155dp"
                android:layout_height="35dp"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:background="#00000000"
                android:src="@drawable/bacground_recherche"
                android:tint="#FF5722"
                tools:ignore="ContentDescription,MissingConstraints"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/semi_fab_margin"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="0dp"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_bathtub_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 Bathrooms"
                    android:textColor="@color/white" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>



    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fab_margin"
                android:layout_marginStart="@dimen/semi_fab_margin"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="About VilLa"
            android:textStyle="bold"
            android:textSize="20sp"
            tools:ignore="HardcodedText,MissingConstraints" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:text="lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum "
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,MissingConstraints"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="35dp" />

        <ImageButton
            android:layout_width="370dp"
            android:layout_height="60dp"
            android:background="#00000000"
            android:src="@drawable/bacground_recherche_2"
            app:tint="#FFC107"
            tools:ignore="ContentDescription,MissingConstraints"
            tools:layout_editor_absoluteX="20dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/fab_margin"
            android:text="Book it for $1400"
            android:textColor="#424242"
            android:textStyle="bold"
            tools:ignore="HardcodedText,MissingConstraints"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="25dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>