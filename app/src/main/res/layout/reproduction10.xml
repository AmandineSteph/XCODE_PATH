<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:text="@string/_09_41"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:padding="@dimen/semi_fab_margin"
            android:layout_marginStart="8dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:padding="5dp"
            app:tint="?android:attr/colorForeground"
            android:src="@drawable/ic_baseline_signal_cellular_alt_24"
            tools:ignore="ContentDescription" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_wifi_24"
            android:layout_gravity="end"
            app:tint="?android:attr/colorForeground"
            android:padding="7dp"
            tools:ignore="ContentDescription" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_round_battery_full_24"
            android:layout_gravity="end"
            app:tint="?android:attr/colorForeground"
            android:padding="4dp"
            tools:ignore="ContentDescription" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/fab_margin"
            android:layout_weight="1"
            android:text="Cancel"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            tools:ignore="HardcodedText" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="250dp"
            android:padding="10dp"
            android:text="Done"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            tools:ignore="HardcodedText" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_marginStart="10dp"
            android:text="Settings"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            tools:ignore="HardcodedText"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_marginStart="40dp"
            android:text="THEME"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="25dp"
        android:layout_margin="@dimen/fab_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/fab_margin">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_outline_brightness_1_24"
                    app:tint="?android:attr/colorForeground" />/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:text="System Light/Dark Mode"
                        android:textColor="#AEABAB"
                        android:textSize="19dp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                    <ImageButton
                        android:layout_width="320dp"
                        android:layout_height="12dp"
                        android:backgroundTint="#605e81"
                        android:src="@drawable/bacground_recherche_2" />

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="Light"
                        android:textSize="19sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                    <ImageButton
                        android:layout_width="340dp"
                        android:layout_height="12dp"
                        android:src="@drawable/bacground_recherche_2"
                        android:backgroundTint="#605e81"/>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:text="Dark"
                            android:textSize="19sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="245dp"
                            android:src="@drawable/ic_baseline_check_24"
                            app:tint="?android:attr/colorForeground" />
                    </LinearLayout>
                    <ImageButton
                        android:layout_width="340dp"
                        android:layout_height="12dp"
                        android:src="@drawable/bacground_recherche_2"
                        android:backgroundTint="#605e81"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/fab_margin"
                            android:src="@drawable/ic_outline_palette_24"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:text="Theme Accent"
                            android:textSize="19sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/fab_margin">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp">

                    <ImageView
                        android:layout_width="54dp"
                        android:layout_height="54dp"
                        android:background="@drawable/bacground_recherche_with_white_border2"
                        android:padding="10dp"
                        android:src="@drawable/ic_baseline_check_24"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/black"
                        tools:layout_editor_absoluteX="0dp"
                        tools:ignore="MissingConstraints" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bacground_recherche"
                        android:backgroundTint="#ffe36b"
                        android:padding="10dp"
                        android:src="@drawable/ic_baseline_check_24"
                        app:tint="@color/black"
                        tools:ignore="MissingConstraints"
                        tools:layout_editor_absoluteX="5dp"
                        tools:layout_editor_absoluteY="5dp" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <ImageButton
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/bacground_recherche"
                    android:backgroundTint="#977aeb"
                    android:padding="10dp" />
                <ImageButton
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/bacground_recherche"
                    android:backgroundTint="#4b9dd7"
                    android:padding="10dp" />
                <ImageButton
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/bacground_recherche"
                    android:backgroundTint="#ce5a52"
                    android:padding="10dp" />
                <ImageButton
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/bacground_recherche"
                    android:backgroundTint="#7e8498"
                    android:padding="10dp" />
            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADVANCED"
        android:layout_marginStart="40dp"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        tools:ignore="HardcodedText" />
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="25dp"
        android:layout_margin="@dimen/fab_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/fab_margin">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="100dp"
                        android:text="Skip Forward"
                        android:textSize="19sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15 seconds"
                        android:textSize="15sp"
                        tools:ignore="HardcodedText" />
                </LinearLayout>
                <ImageButton
                    android:layout_width="340dp"
                    android:layout_height="12dp"
                    android:src="@drawable/bacground_recherche_2"
                    android:backgroundTint="#605e81"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="127dp"
                        android:text="Skip Back"
                        android:textSize="19sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30 seconds"
                        android:textSize="15sp"
                        tools:ignore="HardcodedText" />
                </LinearLayout>
                <ImageButton
                    android:layout_width="340dp"
                    android:layout_height="12dp"
                    android:src="@drawable/bacground_recherche_2"
                    android:backgroundTint="#605e81"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="Open Player Automatically"
                        android:padding="@dimen/semi_fab_margin"
                        android:textSize="19sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/semi_fab_margin">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="51dp"
                            android:layout_height="29dp"
                            android:layout_margin="@dimen/fab_margin"
                            android:background="@drawable/bacground_recherche"
                            android:backgroundTint="#3c3c3d"
                            android:padding="22dp"
                            android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                            tools:ignore="DuplicateIds,MissingConstraints" />

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="31dp"
                            android:layout_height="29dp"
                            android:layout_margin="145dp"
                            android:background="@drawable/bacground_recherche"
                            android:padding="22dp"
                            android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                            tools:layout_editor_absoluteX="-1dp"
                            tools:layout_editor_absoluteY="0dp"
                            tools:ignore="DuplicateIds,MissingConstraints" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
                <ImageButton
                    android:layout_width="340dp"
                    android:layout_height="12dp"
                    android:src="@drawable/bacground_recherche_2"
                    android:backgroundTint="#605e81"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/fab_margin"
                            android:src="@drawable/ic_outline_layers_24"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="130dp"
                            android:text="Siri Shortcuts"
                            android:textSize="19sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_arrow_forward_ios_24"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>